    "version": "0.2.0",
    "configurations": [
        {
            "name": "generate libclang",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/ClangCaster/bin/Debug/netcoreapp3.1/ClangCaster.dll",
            "args": [
                "-n",
                "libclang",
                "-d",
                "${workspaceFolder}/clang",
                "-h",
                "C:/Program Files/LLVM/include/clang-c/Index.h",
                "-I",
                "C:/Program Files/LLVM/include",
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "PATH": "C:\\Program Files\\LLVM\\bin", // path for libclang.dll
            },
            "console": "internalConsole",
            "stopAtEntry": false
        },
    ]
}